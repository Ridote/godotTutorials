script/source = "extends Node2D

const MAIN_MENU : String = \"res://Scenes/GUI/Main.tscn\"
const PLAYER_FACTORY : PackedScene = preload(\"res://Scenes/GameLogic/Bar.tscn\")
const BALL_FACTORY : PackedScene = preload(\"res://Scenes/GameLogic/Ball.tscn\")

onready var pauseMenu = $CanvasLayer/PauseMenu
onready var player1Pos : Position2D = $Player1
onready var player2Pos : Position2D = $Player2

func _ready():
	pauseMenu.connect(\"backToTitle\", self, \"_on_back_to_title\")

	var player1 = PLAYER_FACTORY.instance()
	player1.position = player1Pos.position
	player1.name = \"Player1\"
	add_child(player1)
	
	var player2 = PLAYER_FACTORY.instance()
	player2.position = player2Pos.position
	add_child(player2)
	
	match Settings.gameMode:
		Settings.GAME_MODES.single:
			player2.setPlayer(\"player2\")
			player2.name = \"Player1\"
		Settings.GAME_MODES.duel:
			player2.setPlayer(\"npc\")
			player2.name = \"NPC\"
	
	var ball = BALL_FACTORY.instance()
	ball.name = \"Ball\"
	add_child(ball)
	
func _input(event):
	if event is InputEventKey:
		if event.pressed and event.scancode == KEY_ESCAPE:
			pauseMenu.visible = true
			get_tree().paused = true

func _on_back_to_title():
	if get_tree().change_scene(MAIN_MENU):
		print(\"Error transitioning from Arena to Main Menu\")"

